@model IEnumerable<CategoryModel>

@{ ViewData["Title"] = "Kategoriler"; }

<h1>@ViewData["Title"]</h1>

<p>

    <a class="btn btn-dark" asp-action="Create">Yeni Kategori Oluştur</a>


</p>
<p class="bg-dark text-white" style="text-align:center">

    @{ string count;
                    if (Model != null)
                    {
                        if (Model.Count() == 0)
                        {
                            count = " Kategori yok";
                        }
                        else if (Model.Count() == 1)
                        {
                            count = Model.Count() + " kategori bulundu.";
                        }
                        else
                        {
                            count = Model.Count() + " kategoriler bulundu";
                        }
                    }
                    else
                    {
                        count = " Kategori bulunamadı!";
                    }
        @count }

</p>
<table id="categoriesTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                Güncelle
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductCount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>

    <td>
        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>

    </td>
</tr>}
    </tbody>
</table>

