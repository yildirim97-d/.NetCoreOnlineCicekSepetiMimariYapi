@{
}

@model List<CategoryModel>

@if (Model != null && Model.Count > 0)
{

    <div id="sidebar" class="span3">
        <div class="well well-small">
            <h4 style="color:brown;">Kategoriler</h4>
            <ul class="nav nav-list">

                @foreach (var category in Model)
                {
                    <li>
                        <a asp-action="Index" asp-controller="Products" asp-route-categoryId="@category.Id"><span class="icon-chevron-right"></span>@category.Name</a>
                    </li>
                }

            </ul>





        </div>


        <div class="well well-small"><a href="#"><img src="~/img/paypal.jpg" alt="payment method paypal"></a></div>


        <br>
        <br>


    </div>
    <script src="assets/js/jquery.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/jquery.easing-1.3.min.js"></script>
    <script src="assets/js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="assets/js/shop.js"></script>

}



































