@model UserModel

@{ ViewData["Title"] = "Register"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Twitter Bootstrap shopping cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">


</head>
<body>
    <!--
        Upper Header Section
    -->
    <!--
    Lower Header Section
    -->
    <div class="container">
        <div id="gototop"> </div>

        <!--
        Navigation Bar Section
        -->
        <!--
        Body Section
        -->
        <div class="row">
            <div id="sidebar" class="span3">
                <div class="well well-small">
                    <ul class="nav">
                        <li><a class="btn btn-dark text-white" href="~/Products/Index"><span class="icon-chevron-right"></span>Ürünlere Dön</a></li>



                    </ul>
                </div>


                <div class="well well-small"><a href="#"><img src="~/img/paypal.jpg" alt="payment method paypal"></a></div>


                <br>
                <br>


            </div>







            <div class="span9">
                <ul class="breadcrumb">
                    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                    <li class="active">Üyelik</li>
                </ul>
                
                <hr class="soft" />
                <div class="well">
                    <form asp-action="Register" class="form-horizontal">
                        <h3>Üyelik Bilgileri</h3>
                        <div style="color:red" asp-validation-summary="All" class="text-danger"></div>

                        <div class="control-group">
                            <label asp-for="UserName" class="control-label" for="inputFname">Kullanıcı Adı:</label>
                            @*<label class="control-label" for="inputFname">First name <sup>*</sup></label>*@
                            <div class="controls">
                                <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="control-group">
                            @*<label class="control-label" for="inputLname">Last name <sup>*</sup></label>*@
                            <label asp-for="Password" class="control-label">Şifre:</label>
                            <div class="controls">
                                <input placeholder="Şifre" asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="control-group">
                            @*<label class="control-label" for="inputLname">Last name <sup>*</sup></label>*@
                            <label asp-for="ConfirmPassword" class="control-label">Şifre Tekrarı:</label>
                            <div class="controls">
                                <input placeholder="Şifre Tekrarı" asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>




                        <div class="control-group">
                            <label asp-for="UserDetail.EMail" class="control-label">Email:</label>
                            @*<label class="control-label" for="inputEmail">Email <sup>*</sup></label>*@
                            <div class="controls">
                                @*<input type="text" placeholder="Email">*@
                                <input placeholder="Email" asp-for="UserDetail.EMail" class="form-control" />
                                <span asp-validation-for="UserDetail.EMail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="control-group">
                            <label asp-for="UserDetail.CountryId" class="control-label">Ülke Seçimi</label>

                            <div class="controls">
                                <select asp-for="UserDetail.CountryId" asp-items="ViewBag.Countries" class="form-control" id="countries">
                                    <option value="">-- Ülke Seçiniz --</option>
                                </select>
                                <span asp-validation-for="UserDetail.CountryId" class="text-danger">
                                </span>
                                <span id="countriesMessage" class="text-danger">  </span>

                            </div>
                        </div>

                        <div class="control-group">
                            <label asp-for="UserDetail.CityId" class="control-label">Şehir Seçimi</label>

                            <div class="controls">
                                <select asp-for="UserDetail.CityId" asp-items="ViewBag.Cities" class="form-control cities">
                                    @if (ViewBag.Cities == null)
                                    {
                                <option value="">-- Ülke Seçiniz --</option> }
                                            else
                                            {
                                                <option value="">-- Şehir Seçiniz --</option>

                                            }





                                </select>
                                <span asp-validation-for="UserDetail.CityId" class="text-danger">
                                </span>
                                <span asp-validation-for="UserDetail.CityId" class="text-danger">  </span>

                            </div>
                        </div>



                        <div class="control-group">
                            <label asp-for="UserDetail.Address" class="control-label">Adres:</label>
                            <div class="controls">

                                <input placeholder="Adres" asp-for="UserDetail.Address" class="form-control" />
                                @*<textarea asp-for="UserDetail.Address" class="form-control"></textarea>*@
                                <span asp-validation-for="UserDetail.Address" class="text-danger"></span>

                            </div>

                        </div>






                        <div class="control-group">
                            <div class="controls">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>

                


                





































            </div>
            </div>
            <!--
    Clients
    -->
            <section class="our_client">
                <hr class="soften" />
                <h4 class="title cntr"><span class="text">MARKALAR</span></h4>
                <hr class="soften" />
                <div class="row">
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/1.png"></a>
                    </div>
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/2.png"></a>
                    </div>
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/3.png"></a>
                    </div>
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/4.png"></a>
                    </div>
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/5.png"></a>
                    </div>
                    <div class="span2">
                        <a href="#"><img alt="" src="~/img/6.png"></a>
                    </div>
                </div>
            </section>

            <!--
    Footer
    -->

        </div><!-- /container -->
    <!-- Placed at the end of the document so the pages load faster -->

</body>
</html>







































